                        <GridView BorderThickness="0,1,0,1" Padding="0" BorderBrush="White" Margin="0,5" Grid.Row="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" SelectionMode="None"
                                  ItemClick="Templates_ItemClick" IsItemClickEnabled="True"
