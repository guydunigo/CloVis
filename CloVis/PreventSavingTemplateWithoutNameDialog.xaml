<ContentDialog
    x:Class="CloVis.PreventSavingTemplateWithoutNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CloVis"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Donnez un nom à votre CV"
    PrimaryButtonText="Annuler"
    PrimaryButtonClick="Cancel_Click"
    SecondaryButtonText="Enregistrer"
    SecondaryButtonClick="Save_Click">

    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
        <TextBox x:Name="CvName" PlaceholderText="Intitulé du CV" Background="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" KeyDown="CvName_KeyDown"/>
    </StackPanel>
</ContentDialog>
